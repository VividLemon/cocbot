{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2019
	},
	"rules": {
		"semi": ["warn", "never"],
		"space-before-function-paren": ["error", {
			"anonymous": "always",
			"named": "always",
			"asyncArrow": "always"
		}],
		"no-irregular-whitespace": [1],
		"no-trailing-spaces": [1],
		"no-multiple-empty-lines": [2, {"max": 1}],
		"newline-after-var": ["warn"]
	}
}